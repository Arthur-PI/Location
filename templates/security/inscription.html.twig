{% extends "base.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}
<style>
    .content{
        width:fit-content;
        min-width: 400px;
        margin:auto;
        padding:15px;
        border: 2px solid #ffb84d ;
        border-radius: 25px;
        color: white;
        background-color: #5195A8;
    }

    h2{
        text-align:center;
        margin-top:100px !important;
    }
</style>
{% endblock %}

{% block body %}
    <h2>Formulaire d'inscription</h2>
    <div class="content">
        {{ form_start(form) }}
            {{ form_row(form.nom, {'attr' : {'placeholder': 'Entreprise'}}) }}
            {{ form_row(form.email, {'attr' : {'placeholder': 'nom@email.com'}}) }}
            {{ form_row(form.password, {'attr' : {'placeholder': 'mot de passe'}}) }}
            {{ form_row(form.confirm_password, {'attr' : {'placeholder': 'répéter le mot de passe'}}) }}
            <button type="submit" class="btn btn-success">Valider</button>
        {{ form_end(form) }}
    </div>
{% endblock %}